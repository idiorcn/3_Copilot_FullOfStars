/* index.wxss */
.container {
  padding: 20px;
  font-family: Arial, sans-serif;
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.level-info {
  text-align: center;
  margin-bottom: 20px;
}

.chart-container {
  position: relative;
  width: 300px;
  height: 300px;
  margin: 0 auto;
}

.price-scale, .percentage-scale {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 12px;
}

.price-scale {
  left: -50px;
}

.percentage-scale {
  right: -50px;
}

.info {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.controls {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.controls input {
  width: 100px;
  margin-right: 10px;
}

.challenge-info {
  margin-top: 20px;
  text-align: center;
}

.qr-code {
  margin-top: 20px;
}

.qr-code image {
  width: 200px;
  height: 200px;
}